root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80

[{.babelrc,.eslintrc,.prettierrc,.stylelintrc}]
indent_size = 2

[/src/**/*.{tsx,ts,js}]
ij_typescript_file_name_style = pascal_case
ij_typescript_import_prefer_absolute_path = true
ij_typescript_import_use_node_resolution = true
ij_typescript_use_path_mapping = different_paths
